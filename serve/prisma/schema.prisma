generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id                Int         @id @default(autoincrement())
  nombre            String      @unique
  correo            String      @unique
  password          String
  habilidadesId     Int
  asiganarHabilidad Habilidad   @relation(fields: [habilidadesId], references: [id])
  solicitudes       Solicitud[]
}

model Solicitud {
  id            Int      @id @default(autoincrement())
  userId        Int
  solicitudUser Usuario  @relation(fields: [userId], references: [id])
  fecha         DateTime
}

model Trabajos {
  id        Int     @id @default(autoincrement())
  imagen    String?
  recurso   String?
  descricao String
  estado    String  @default("false")
}

model Habilidad {
  id        Int       @id @default(autoincrement())
  habilidad String
  estado    String    @default("false")
  usuarios  Usuario[]
}
